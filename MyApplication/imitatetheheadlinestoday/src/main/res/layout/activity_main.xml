<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/rp_main_rp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_main_home"
            android:drawableTop="@drawable/selector_b_newhome_tabbar"
            android:text="@string/home"
            android:checked="true"
            style="@style/RidaoButtonTabbarStyle"
            />
        <RadioButton
            android:id="@+id/rb_main_discover"
            android:drawableTop="@drawable/selector_b_newdiscover_tabbar"
            android:text="@string/discover"
            style="@style/RidaoButtonTabbarStyle"
            />
        <RadioButton
            android:id="@+id/rb_main_care"
            android:drawableTop="@drawable/selector_b_newcare_tabbar"
            android:text="@string/care"
            style="@style/RidaoButtonTabbarStyle"
            />
        <RadioButton
            android:id="@+id/rb_main_mine"
            android:drawableTop="@drawable/selector_b_newmine_tabbar"
            android:text="@string/mine"
            style="@style/RidaoButtonTabbarStyle"
            />
    </RadioGroup>
</LinearLayout>
