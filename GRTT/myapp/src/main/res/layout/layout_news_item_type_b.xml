<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:minHeight="200dp"
    android:padding="10dp">

        <com.ds.myapp.view.SetSizeImageView
            android:id="@+id/img_news_item_b"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="#ffff00" />

        <TextView
            android:id="@+id/tv_news_item_b_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_news_item_b"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_news_item_b"
            android:maxLines="1"
            android:text="标题"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_news_item_b_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_news_item_b"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_news_item_b"
            android:maxLines="7"
            android:text="内容内容内容内容内容内容内容内容
        内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内内容内容内容
        "
            android:textSize="15sp" />
</RelativeLayout>